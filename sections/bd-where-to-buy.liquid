<section
  id="WhereToBuy-{{ section.id }}"
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
  data-section="{{ section.id }}"
></section>

{% schema %}
{
  "name": "Where to Buy",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Headline"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-5"
    }
  ],
  "presets": [
    {
      "name": "Where to Buy",
      "settings": {
        "title": "Also available at:"
      }
    }
  ]
}
{% endschema %}
