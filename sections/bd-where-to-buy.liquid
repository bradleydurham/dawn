{% if product.metafields.custom.where_to_buy != blank %}
  <section
    id="WhereToBuy-{{ section.id }}"
    class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}"
    data-section="{{ section.id }}"
  >
    <div class="page-width">
      <div class="where-to-buy {{ section.settings.content_alignment }}">
        <h2>{{ section.settings.title }}</h2>
      </div>
      <div class="logos">
        {% for where_to_buy in product.metafields.custom.where_to_buy.value %}
          <a href="{{ where_to_buy.external_link_to_product }}">
            {{- where_to_buy.store_logo | image_url: width: 200 | image_tag -}}
          </a>
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Where to Buy",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Headline"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.rich-text.settings.content_alignment.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-5"
    }
  ]
}
{% endschema %}
