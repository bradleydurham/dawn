{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "2b0f2c7a-5e4b-4bd3-b6bd-e011403b1d08": {
          "type": "complementary",
          "settings": {
            "block_heading": "Pairs well with",
            "make_collapsible_row": true,
            "icon": "price_tag",
            "product_list_limit": 2,
            "products_per_page": 2,
            "pagination_style": "counter",
            "image_ratio": "square",
            "enable_quick_add": true
          }
        },
        "collapsible-row-0": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "{{ product.metafields.custom.material_description.value.title.value }}",
            "icon": "leather",
            "content": "<p>{{ product.metafields.custom.material_description.value.description | metafield_tag }}<\/p>",
            "page": ""
          }
        },
        "collapsible-row-1": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Shipping",
            "icon": "truck",
            "content": "{{ product.metafields.custom.shipping_policy.value.description | metafield_tag }}",
            "page": ""
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "caption",
        "price",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "2b0f2c7a-5e4b-4bd3-b6bd-e011403b1d08",
        "collapsible-row-0",
        "collapsible-row-1"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "",
        "media_size": "medium",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "thumbnail_slider",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": true,
        "padding_top": 36,
        "padding_bottom": 12
      }
    },
    "image-with-text": {
      "type": "image-with-text",
      "blocks": {
        "image-with-text-0": {
          "type": "heading",
          "settings": {
            "heading": "{{ product.metafields.custom.technology.value.title.value }}",
            "heading_size": "h1"
          }
        },
        "image-with-text-1": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.custom.technology.value.description | metafield_tag }}",
            "text_style": "body"
          }
        },
        "5c1a185a-7e62-49af-962c-a7fed7c7b055": {
          "type": "button",
          "settings": {
            "button_label": "{{ product.metafields.custom.technology.value.button_text.value }}",
            "button_link": "{{ product.metafields.custom.technology.value.button_link.value }}",
            "button_style_secondary": false
          }
        }
      },
      "block_order": [
        "image-with-text-0",
        "image-with-text-1",
        "5c1a185a-7e62-49af-962c-a7fed7c7b055"
      ],
      "settings": {
        "image": "{{ product.metafields.custom.technology.value.image_or_video.value }}",
        "height": "adapt",
        "desktop_image_width": "small",
        "layout": "text_first",
        "desktop_content_position": "top",
        "desktop_content_alignment": "left",
        "content_layout": "no-overlap",
        "section_color_scheme": "scheme-2",
        "color_scheme": "scheme-2",
        "image_behavior": "none",
        "mobile_content_alignment": "left",
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "de66572a-642e-4d97-8e89-e900c93cea71": {
      "type": "bd-where-to-buy",
      "settings": {
        "title": "Also Available at:",
        "content_alignment": "center",
        "color_scheme": ""
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You may also like",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "image-with-text",
    "de66572a-642e-4d97-8e89-e900c93cea71",
    "related-products"
  ]
}
